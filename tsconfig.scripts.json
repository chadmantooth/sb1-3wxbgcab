{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "target": "ESNext"
  },
  "include": [
    "src/lib/**/*.ts",
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}