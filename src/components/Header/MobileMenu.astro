---
import { navItems } from '../../config/navigation.js';
---

<div class="md:hidden">
  <button id="menuButton" class="text-white p-2">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  
  <div id="mobileMenu" class="hidden fixed inset-0 bg-[#1a1f3d] z-50">
    <div class="p-4">
      <button id="closeMenu" class="text-white p-2 float-right">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <nav class="mt-16 flex flex-col space-y-4">
        {navItems.map(({ href, label }) => (
          <a 
            href={href} 
            class={`text-white hover:text-[#e63946] text-xl font-medium px-4 py-2 flex items-center ${
              label === 'Threat Intelligence Feed' ? 'gap-2' : ''
            }`}
          >
            {label === 'Threat Intelligence Feed' && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            )}
            {label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</div>

<script>
  const menuButton = document.getElementById('menuButton');
  const closeMenu = document.getElementById('closeMenu');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
  });

  closeMenu?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
  });
</script>