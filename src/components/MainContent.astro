---
interface Props {
  category?: string;
}

const { category = 'All' } = Astro.props;
---

<div class="space-y-8">
  <!-- Featured Section -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Latest Updates</h2>
    <p class="text-gray-600">
      Stay informed with the latest industry news and technological advancements
    </p>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-2 gap-4">
    <a 
      href="/news" 
      class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
    >
      News Feed
    </a>
    <a 
      href="/threats" 
      class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      aria-label="View Threat Intelligence Feed"
    >
      <svg 
        class="w-5 h-5 mr-2" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" 
        />
      </svg>
      Threat Intelligence
    </a>
  </div>

  <!-- Recent Activity -->
  <div class="space-y-4">
    <h2 class="text-xl font-semibold text-gray-900">Recent Activity</h2>
    <div class="space-y-4">
      <div class="bg-white rounded-lg shadow-sm p-4">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <img src="/images/news.png" alt="" class="w-10 h-10 rounded-full" />
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900">Latest Industry Update</h3>
            <p class="text-sm text-gray-500">New developments in digital oilfield technology</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-4">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <img src="/images/tech.png" alt="" class="w-10 h-10 rounded-full" />
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900">Technology Insight</h3>
            <p class="text-sm text-gray-500">AI applications in production optimization</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-4">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <img src="/images/report.png" alt="" class="w-10 h-10 rounded-full" />
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900">Market Analysis</h3>
            <p class="text-sm text-gray-500">Q1 2025 industry performance review</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>