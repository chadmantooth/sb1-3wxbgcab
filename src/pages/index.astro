---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';
import NewsFeed from '../components/NewsFeed.astro';
---

<Layout title="Tech News Hub">
  <Header />
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Latest News</h1>
      <p class="mt-2 text-gray-600">Stay updated with the latest industry news and insights</p>
    </div>
    <NewsFeed />
  </main>
</Layout>